extends ../templates/_main.pug
include ../helpers/mixins.pug

  block link-active
    - modal_request = true
    - contacts = true



block content
  include ../modules/_breadcrumbs.pug

  section.contacts
    .contacts__inner.container

      .contacts__col-left
        h2.contacts__title.title Контакты
        p.contacts__text Запишитесь на консультацию или позвоноите нам
        a.contacts__phone.connect__phone.phone.hover-opacity(href="tel:+491570156")
          +svg(`phone`, `16`, `#8D8F9E`)
          span.phone__text.size-1.tablet-hidden 8 800 555 55 55

        a.contacts__link.btn-2.hover-opacity(href="#modal-request" rel="modal:open") Получить консультацию

        .contacts__box
          p.contacts__addr Иркутск, ул. ул. Сергеева, 3/4
          ul.contacts__soc.soc
            li.soc__item
              a.socials__link.hover-opacity.socials__link--insta(rel="noopener" href="" aria-label="инстаграм" target="_blank")
            li.soc__item
              a.socials__link.hover-opacity.socials__link--vk(rel="noopener" href="" aria-label="в контакте" target="_blank")
            li.soc__item
              a.socials__link.hover-opacity.socials__link--fb(rel="noopener" href="" aria-label="фэйсбук" target="_blank")





      .contacts__col-right.conacts-map
        .conacts-map__inner
          <iframe src="https://snazzymaps.com/embed/311338" width="100%" height="400px" style="border:none;"></iframe>
          //- <iframe src="https://snazzymaps.com/embed/311338" width="100%" height="600px" style="border:none;"></iframe>
